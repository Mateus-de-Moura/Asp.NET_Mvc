@model UsuarioModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

<div class="container">
        <div class="card">
            <h3>Login</h3>
        <form asp-controller="Login" asp-action="Logar" method="post">
                <div class="form-group">
                    <label for="email">Email</label>
                <input itemid="teste" asp-for="usuario"  type="email" class="form-control" id="email">

                </div>
                <div class="form-group">
                    <label for="senha">Senha</label>
                    <input type="password" asp-for="senha" class="form-control" id="senha">
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="relembrar" >
                    <label class="form-check-label" for="relembrar"style="color: white">Relembrar senha</label>
                </div>
                <div>

                </div>
                <button type="submit" class="btn" id="btn-login">Logar</button>
                <div class="criarConta">
                <label for="email">Não possui uma conta? <button id="btnCriar" asp-area="" asp-controller="Login" asp-action="Cadastro">Crie uma aqui!</button></label>
                </div>
            </form>
        </div>
    </div>



